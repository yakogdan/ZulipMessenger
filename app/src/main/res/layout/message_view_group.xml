<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_message_avatar"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_marginLeft="@dimen/default_indent"
        android:layout_marginTop="@dimen/default_indent"
        android:layout_marginRight="@dimen/default_indent"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

    <TextView
        android:id="@+id/tv_message_name"
        style="@style/MessageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_horizontal_margin"
        android:paddingLeft="@dimen/default_indent"
        android:paddingTop="@dimen/default_indent"
        android:paddingRight="@dimen/default_indent"
        android:paddingBottom="@dimen/bottom_indent" />

    <TextView
        android:id="@+id/tv_message_text"
        style="@style/MessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_horizontal_margin"
        android:paddingLeft="@dimen/default_indent"
        android:paddingTop="@dimen/default_indent"
        android:paddingRight="@dimen/default_indent" />

    <com.bogdankostyrko.messenger.presentation.screens.chat.customviews.ReactionFlexBox
        android:id="@+id/fb_reaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_horizontal_margin"
        android:layout_marginTop="@dimen/default_indent" />
</merge>